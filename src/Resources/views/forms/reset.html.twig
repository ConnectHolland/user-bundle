{% extends '@ConnecthollandUser/base.html.twig' %}

{% trans_default_domain 'ConnecthollandUserBundle' %}

{% block connectholland_user_content %}
    {% embed '@ConnecthollandUser/forms/_title.html.twig' with {'context': 'reset', 'text': 'connectholland_user.reset.request.title'} only  %}{% endembed %}
    {{ form_start(form) }}
        {{ form_row(form.email) }}
        {% embed '@ConnecthollandUser/forms/_button.html.twig' with {'context': 'reset', 'type': 'submit', 'text': 'connectholland_user.reset.request.submit', 'class': 'btn'} only  %}{% endembed %}
        {% embed '@ConnecthollandUser/forms/_link.html.twig' with {'context': 'reset', 'route': 'connectholland_user_login', 'text': 'connectholland_user.reset.request.login'} only %}{% endembed %}
    {{ form_end(form) }}
{% endblock %}
