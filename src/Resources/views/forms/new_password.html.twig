{% extends '@ConnecthollandUser/base.html.twig' %}

{% trans_default_domain 'ConnecthollandUserBundle' %}

{% block connectholland_user_content %}
    {% embed '@ConnecthollandUser/forms/_title.html.twig' with {'context': 'new_password', 'text': 'connectholland_user.reset.new_password.title'} only  %}{% endembed %}
    {{ form_start(form) }}
        {{ form_row(form.password) }}
        {% embed '@ConnecthollandUser/forms/_button.html.twig' with {'context': 'new_password', 'type': 'submit', 'text': 'connectholland_user.reset.new_password.submit', 'class': 'btn'} only  %}{% endembed %}
        {% embed '@ConnecthollandUser/forms/_link.html.twig' with {'context': 'new_password', 'route': 'connectholland_user_login', 'text': 'connectholland_user.reset.new_password.login'} only %}{% endembed %}
    {{ form_end(form) }}
{% endblock %}
