{% extends '@ConnecthollandUser/base.html.twig' %}

{% trans_default_domain 'ConnecthollandUserBundle' %}

{% block connectholland_user_content %}
    {% embed '@ConnecthollandUser/forms/_title.html.twig' with {'context': 'register', 'text': 'connectholland_user.registration.title'} only  %}{% endembed %}
    {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword) }}
        {{ form_row(form.terms) }}

        {% embed '@ConnecthollandUser/forms/_button.html.twig' with {'context': 'register', 'type': 'submit', 'text': 'connectholland_user.registration.submit', 'class': 'btn'} only %}{% endembed %}
    {{ form_end(form) }}
{% endblock %}
