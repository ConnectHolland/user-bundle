{% extends '@ConnecthollandUser/base.html.twig' %}

{% trans_default_domain 'ConnecthollandUserBundle' %}

{% block connectholland_user_content %}
    {% embed '@ConnecthollandUser/forms/_title.html.twig' with {'context': 'login', 'text': 'connectholland_user.security.login.title'} only  %}{% endembed %}
    {{ form_start(form) }}
        {{ form_row(form._username) }}
        {{ form_row(form._password) }}
        {% embed '@ConnecthollandUser/forms/_button.html.twig' with {'context': 'login', 'type': 'submit', 'text': 'connectholland_user.security.login.submit', 'class': 'btn'} only  %}{% endembed %}
        {% embed '@ConnecthollandUser/forms/_link.html.twig' with {'context': 'login', 'route': 'connectholland_user_registration', 'text': 'connectholland_user.security.login.register'} only %}{% endembed %}
        {% embed '@ConnecthollandUser/forms/_link.html.twig' with {'context': 'login', 'route': 'connectholland_user_reset', 'text': 'connectholland_user.security.login.reset'} only %}{% endembed %}
    {{ form_end(form) }}
    {% if add_oauth %}
        {% embed "@HWIOAuth/Connect/login.html.twig" %}
        {% endembed %}
    {% endif %}
{% endblock %}
